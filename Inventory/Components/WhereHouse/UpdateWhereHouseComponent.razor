@using Inventory.Business;
@using Inventory.Entity.obj;
@using Inventory.Entity;


@inject NavigationManager navManager

<div>
    <EditForm Model="wherehouse">
        <div class="form-group">
            <label>Nombre de la bodega:</label>
            <InputText @bind-Value="wherehouse.WherehouseName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Descripción:</label>
            <InputTextArea @bind-Value="wherehouse.WherehouseAddress" class="form-control" />
        </div>
     

        <input type="button" value="Modificar Bodega" @onclick=UpdateProduct />
    </EditForm>
</div>

@code {
    [Parameter]
    public String WherehouseId { get; set; }
    WherehouseEntity wherehouse = new WherehouseEntity();


    protected override async Task OnInitializedAsync()
    {


        wherehouse = B_WhereHouse.buscar_wherehouse(WherehouseId);
    }

    private void UpdateProduct()
    {
        B_WhereHouse.Update(wherehouse);
        navManager.NavigateTo("list/Wherehouse");

    }
}
