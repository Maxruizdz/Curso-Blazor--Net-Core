@page "/"

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Inicio de Sesión</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
            padding: 20px;
            width: 300px;
        }

        .container h2 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Inicio de Sesión</h2>
       
            <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" @bind-value=@message placeholder="example@example.com" required >
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required @bind-value=@message2>
            </div>
            
            
            <button type="submit" @onclick="Registracion">Iniciar Sesión</button>

            <b>@mesaje_registro</b>
       

    </div>
  
</body>
</html>



@code{


    string message = "";
    string message2 = "";
    string mesaje_registro = "";

    private void Registracion()
    {
        if (string.IsNullOrEmpty(message) | string.IsNullOrEmpty(message2))
        {
            mesaje_registro = "No ha ingresado el email o el correo, por favor vuelva a intentarlo";

        }
        else
        {

            if (message.Contains("@gmail.com") | message.Contains("@hotmail.com"))
            {

                mesaje_registro = "Se ha registrado Existosamente";


            }
            else
            {

                mesaje_registro = "El formato del email no es el correcto, Vuelva a intentarlo";

            }

        
        }

    
    
    }

}


